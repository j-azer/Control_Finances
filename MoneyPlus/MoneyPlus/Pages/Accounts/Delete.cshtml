@page
@model MoneyPlus.Pages.Accounts.DeleteModel

@{
    ViewData["Title"] = "Delete Account";
}

<h1 class="display-5">@ViewData["Title"]</h1>
<br />
<h3>Are you sure you want to delete this?</h3>
<div>
    <br />
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.Description)
        </dd>
         <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.Balance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.Balance)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.UserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.UserId)
        </dd>
    </dl>
    <br />
    <form method="post">
        <input type="hidden" asp-for="Account.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-page="./Index">Back to List</a>
    </form>
